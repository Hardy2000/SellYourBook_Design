<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SellYourBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_blue</item>
        <item name="colorPrimaryVariant">@color/status_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_headers">

        <item name="android:textSize">
            24sp
        </item>
        <item name="fontFamily">
            @font/roboto_bold
        </item>
        <item name="android:textColor">
            #133E59
        </item>

    </style>

    <style name="text_sub_headers">

        <item name="android:textSize">
            14sp
        </item>
        <item name="fontFamily">
            @font/roboto
        </item>

        <item name="android:textColor">
            #0D0D0D
        </item>

    </style>
    <style name="text_min_headers">

        <item name="android:textSize">
            12sp
        </item>
        <item name="fontFamily">
            @font/roboto_bold
        </item>
        <item name="android:textColor">
            #133E59
        </item>

    </style>

    <style name="Link_Account_Dialog_Style" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>



</resources>