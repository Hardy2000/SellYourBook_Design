<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp_Activity">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="94dp"
    android:layout_height="91dp"
    android:src="@drawable/otp_image"
    android:layout_marginTop="50dp"
    android:layout_alignParentLeft="true"
    android:layout_marginStart="23dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="23dp"
        android:orientation="vertical">

        <TextView
            style="@style/text_headers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4sp"
            android:paddingBottom="10dp"
            android:text="Verify Mobile Number" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/text_sub_headers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"

                android:text="Enter 4 digit OTP sent to 89068 83060" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:lineSpacingExtra="4sp"
                android:text=" Change"
                android:textColor="@color/theme_blue"

                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/ot1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                tools:ignore="LabelsFor" />

            <EditText
                android:id="@+id/ot2"

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:imeOptions="actionNext"

                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                tools:ignore="LabelsFor" />

            <EditText
                android:id="@+id/ot3"

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:imeOptions="actionNext"

                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                tools:ignore="LabelsFor" />

            <EditText
                android:id="@+id/ot4"

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                tools:ignore="LabelsFor" />


        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_baseline_timelapse"
            android:drawablePadding="5dp"
            android:fontFamily="@font/roboto"
            android:inputType="textPersonName"
            android:text="Resend in 00:30"
            android:textColor="@color/theme_blue"
            android:textSize="12sp"

            />


    </LinearLayout>

    <Button
        android:id="@+id/btn_otp_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/theme_yellow"
        android:fontFamily="@font/roboto_bold"
        android:padding="10dp"
        android:text="VERIFY"
        android:textColor="@color/theme_blue"
        android:textSize="16sp" />
</RelativeLayout>